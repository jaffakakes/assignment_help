<Window x:Class="AssignWpf.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PopupWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="numberTextBox1" Grid.Row="0" Margin="10" />
        <TextBox x:Name="numberTextBox2" Grid.Row="1" Margin="10" />
        <Button x:Name="okButton" Grid.Row="2" Margin="10" Content="OK" Click="OkButton_Click" />
        <TextBlock x:Name="warningTextBlock" Grid.Row="3" Margin="10" Foreground="Red" />
    </Grid>
</Window>
